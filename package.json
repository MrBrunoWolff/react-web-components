{
  "name": "react-web-components",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "main": "dist/web-components/react-web-components.umd.js",
  "module": "dist/web-components/react-web-components.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/web-components",
    "dist/components",
    "dist/lib",
    "dist/index.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/web-components/react-web-components.es.js",
      "require": "./dist/web-components/react-web-components.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run clean && tsc -b && vite build",
    "build:wc": "vite build --config vite.config.wc.ts",
    "build:types": "tsc --project tsconfig.lib.json",
    "build:lib": "npm run clean && npm run build:wc && npm run build:types",
    "prepare-package": "node scripts/prepare-package.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepublishOnly": "npm run lint && npm run test && npm run build:lib",
    "clean": "rm -rf dist dist-lib",
    "clean:source-dts": "find src -name '*.d.ts' -type f -delete"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@r2wc/react-to-web-component": "^2.0.4",
    "@radix-ui/react-accordion": "^1.2.4",
    "@radix-ui/react-alert-dialog": "^1.1.7",
    "@radix-ui/react-aspect-ratio": "^1.1.3",
    "@radix-ui/react-avatar": "^1.1.4",
    "@radix-ui/react-checkbox": "^1.1.5",
    "@radix-ui/react-collapsible": "^1.1.4",
    "@radix-ui/react-context-menu": "^2.2.7",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-hover-card": "^1.1.7",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-menubar": "^1.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.6",
    "@radix-ui/react-popover": "^1.1.7",
    "@radix-ui/react-progress": "^1.1.3",
    "@radix-ui/react-radio-group": "^1.2.4",
    "@radix-ui/react-scroll-area": "^1.2.4",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slider": "^1.2.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.4",
    "@radix-ui/react-toggle": "^1.1.3",
    "@radix-ui/react-toggle-group": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@tailwindcss/vite": "^4.1.3",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.487.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-day-picker": "^9.6.5",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.55.0",
    "react-resizable-panels": "^2.1.7",
    "recharts": "^2.15.2",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.3",
    "tw-animate-css": "^1.2.5",
    "vaul": "^1.1.2",
    "zod": "^3.24.2"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@playwright/test": "^1.51.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "eslint": "^9.24.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vite": "^6.2.6",
    "vitest": "^3.1.1"
  },
  "keywords": [
    "react",
    "web-components",
    "shadcn",
    "ui",
    "components",
    "design-system"
  ],
  "description": "Shadcn UI components wrapped as Web Components for use in any framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/MrBrunoWolff/react-web-components.git"
  },
  "author": "Bruno Wolff",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MrBrunoWolff/react-web-components/issues"
  },
  "homepage": "https://github.com/MrBrunoWolff/react-web-components#readme"
}
